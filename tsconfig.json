{
    "compilerOptions": {
      "outDir": "./build/public/js",
      "rootDirs": ["./src/public/ts"],
      "declaration": true,
      "composite": true,
      "lib": ["DOM" , "ES6"],
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": false,
      "checkJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictPropertyInitialization": true,
      "skipLibCheck": true,
      "moduleResolution": "node"
    }
  }